apiVersion: v1
kind: Namespace
metadata:
  name: fuel-friend
---
apiVersion: v1
kind: Secret
metadata:
  name: fuel-user-env
  namespace: fuel-friend
type: Opaque
stringData:
  DATABASE_URL: "postgresql://fuel_user:fuel_password@postgres-service:5432/fuel_db"
  PORT: "4000"
  NODE_ENV: "production"
  SENDGRID_API_KEY: "SG.your_sendgrid_api_key_here"
  SENDGRID_FROM_EMAIL: "your_email@domain.com"
  STRIPE_SECRET_KEY: "sk_test_your_stripe_secret_key_here"
  JWT_SECRET: "WILL_BE_GENERATED_BY_SCRIPT"
  JWT_EXPIRES_IN: "7d"
  WHATSAPP_SESSION_PATH: "./server/wa-session"
  FIREBASE_PROJECT_ID: "your_firebase_project_id"
  FIREBASE_SERVICE_ACCOUNT_KEY: '{"type":"service_account","project_id":"your_project"}'
  TWILIO_ACCOUNT_SID: "your_twilio_account_sid"
  TWILIO_AUTH_TOKEN: "your_twilio_auth_token"
  TWILIO_PHONE_NUMBER: "+1234567890"
  RESEND_API_KEY: "re_your_resend_api_key_here"