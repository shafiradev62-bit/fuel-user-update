# ========================================
# FUELFRIENDLY BACKEND - ENVIRONMENT CONFIGURATION
# ========================================

# ----------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------
# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
# Example: postgresql://user:pass@localhost:5432/fuelfriendly

DATABASE_URL=postgresql://username:password@localhost:5432/fuelfriendly

# ----------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------
PORT=4000
NODE_ENV=development

# ----------------------------------------
# SENDGRID EMAIL SERVICE
# ----------------------------------------
# Sign up at: https://sendgrid.com/
# Get API Key from SendGrid dashboard

SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@fuelfriendly.com

# ----------------------------------------
# STRIPE PAYMENT
# ----------------------------------------
# Sign up at: https://stripe.com/
# Get Secret Key from Stripe dashboard

STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# ----------------------------------------
# JWT AUTHENTICATION
# ----------------------------------------
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# ----------------------------------------
# WHATSAPP SERVICE (BAILEYS)
# ----------------------------------------
# WhatsApp session will be stored in server/wa-session/
# No additional config needed for Baileys

WHATSAPP_SESSION_PATH=./server/wa-session

# ----------------------------------------
# FIREBASE ADMIN SDK
# ----------------------------------------
# Firebase project configuration
FIREBASE_PROJECT_ID=fuelflow-asi

# Firebase service account key (JSON string)
# Get from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your_project"}

# Alternative: Use default credentials in production
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# Twilio (alternative SMS service)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Resend (alternative email service)
RESEND_API_KEY=re_your_resend_api_key_here